- if @evaluation.census_current_or_future?
  %p
    - if @evaluation.census_current?
      = t('.census_evaluation_active', year: @evaluation.census.year, start_at: f(@evaluation.census.start_at))
    - else
      = t('.census_evaluation', year: @evaluation.census.year, start_at: f(@evaluation.census.start_at))
    - if @evaluation.census.finish_at?
      = t('.census_evaluation_reference_date', finish_at: f(@evaluation.census.finish_at))
